<?xml version="1.0" encoding="utf-8"?>
<jtlshopplugin>
    <Name>TrustCaptcha</Name>
    <Description>TrustCaptcha – Privacy-first CAPTCHA solution for JTL. GDPR-compliant, bot protection made in Europe.</Description>
    <Author>Trustcaptcha GmbH</Author>
    <URL>https://www.trustcomponent.com/en/products/captcha/integrations/jtl-captcha-plugin</URL>
    <PluginID>trustcomponent_trustcaptcha_jtl</PluginID>
    <XMLVersion>100</XMLVersion>
    <Version>2.1.1</Version>
    <ShopVersion>5.0.0</ShopVersion>
    <CreateDate>2026-01-01</CreateDate>

<!--    <ExsID></ExsID> &lt;!&ndash; TODO für extension store &ndash;&gt;-->

    <Install>

        <RequireComposer>
            <Package name="trustcomponent/trustcaptcha-php" version="^2.0"/>
        </RequireComposer>

        <Locales>
            <Variable>
                <Name>captcha_failed_alert</Name>
                <VariableLocalized iso="GER">Sicherheitsprüfung fehlgeschlagen. Wir konnten nicht verifizieren, dass Sie ein Mensch sind. Bitte versuchen Sie es erneut.</VariableLocalized>
                <VariableLocalized iso="ENG">Security check failed. We could not verify that you are human. Please try again.</VariableLocalized>
                <Description>Alert message for failed CAPTCHAs.</Description>
            </Variable>
        </Locales>

        <Adminmenu>
            <Settingslink sort="3">
                <Name>Settings</Name>

                <Setting type="text" initialValue="" sort="3" conf="Y">
                    <Name>Site-Key (required)</Name>
                    <Description>Site-Key of the CAPTCHA. You can find this on the administration page of your CAPTCHA.</Description>
                    <ValueName>trustcaptcha_site_key</ValueName>
                </Setting>

                <Setting type="password" initialValue="" sort="4" conf="Y">
                    <Name>Secret-Key (required)</Name>
                    <Description>Secret-Key of the CAPTCHA. You can find this on the administration page of your CAPTCHA.</Description>
                    <ValueName>trustcaptcha_secret_key</ValueName>
                </Setting>

                <Setting type="password" initialValue="" sort="5" conf="Y">
                    <Name>License-Key (optional)</Name>
                    <Description>License key for special features such as privacyUrl, hideBranding, customDesign or invisible.</Description>
                    <ValueName>trustcaptcha_license_key</ValueName>
                </Setting>

                <Setting type="selectbox" initialValue="0.5" sort="6" conf="Y">
                    <Name>Bot score threshold (0.00–1.00)</Name>
                    <Description>At which score a request counts as a bot. Recommended: 0.5 (0 = human, 1 = bot)</Description>
                    <ValueName>trustcaptcha_threshold</ValueName>
                    <SelectboxOptions>
                        <Option value="0.00" sort="0">0.00</Option>
                        <Option value="0.05" sort="1">0.05</Option>
                        <Option value="0.10" sort="2">0.10</Option>
                        <Option value="0.15" sort="3">0.15</Option>
                        <Option value="0.20" sort="4">0.20</Option>
                        <Option value="0.25" sort="5">0.25</Option>
                        <Option value="0.30" sort="6">0.30</Option>
                        <Option value="0.35" sort="7">0.35</Option>
                        <Option value="0.40" sort="8">0.40</Option>
                        <Option value="0.45" sort="9">0.45</Option>
                        <Option value="0.50" sort="10">0.50</Option>
                        <Option value="0.55" sort="11">0.55</Option>
                        <Option value="0.60" sort="12">0.60</Option>
                        <Option value="0.65" sort="13">0.65</Option>
                        <Option value="0.70" sort="14">0.70</Option>
                        <Option value="0.75" sort="15">0.75</Option>
                        <Option value="0.80" sort="16">0.80</Option>
                        <Option value="0.85" sort="17">0.85</Option>
                        <Option value="0.90" sort="18">0.90</Option>
                        <Option value="0.95" sort="19">0.95</Option>
                        <Option value="1.00" sort="20">1.00</Option>
                    </SelectboxOptions>
                </Setting>

                <Setting type="selectbox" initialValue="full" sort="7" conf="Y">
                    <Name>Width</Name>
                    <Description>Width of the TrustCaptcha component.</Description>
                    <ValueName>trustcaptcha_width</ValueName>
                    <SelectboxOptions>
                        <Option value="full" sort="1">Full</Option>
                        <Option value="fixed" sort="2">Fixed</Option>
                    </SelectboxOptions>
                </Setting>

                <Setting type="selectbox" initialValue="auto" sort="8" conf="Y">
                    <Name>Language</Name>
                    <Description>Display language of the TrustCaptcha component.</Description>
                    <ValueName>trustcaptcha_language</ValueName>
                    <SelectboxOptions>
                        <Option value="auto" sort="1">Auto Detection</Option>

                        <Option value="ar" sort="2">Arabic</Option>
                        <Option value="be" sort="3">Belarusian</Option>
                        <Option value="bg" sort="4">Bulgarian</Option>
                        <Option value="bs" sort="5">Bosnian</Option>
                        <Option value="ca" sort="6">Catalan</Option>
                        <Option value="cs" sort="7">Czech</Option>
                        <Option value="da" sort="8">Danish</Option>
                        <Option value="en" sort="9">English</Option>
                        <Option value="fr" sort="10">French</Option>
                        <Option value="de" sort="11">German</Option>
                        <Option value="el" sort="12">Greek</Option>
                        <Option value="et" sort="13">Estonian</Option>
                        <Option value="fi" sort="14">Finnish</Option>
                        <Option value="hi" sort="15">Hindi</Option>
                        <Option value="hr" sort="16">Croatian</Option>
                        <Option value="hu" sort="17">Hungarian</Option>
                        <Option value="it" sort="18">Italian</Option>
                        <Option value="ko" sort="19">Korean</Option>
                        <Option value="lb" sort="20">Luxembourgish</Option>
                        <Option value="lt" sort="21">Lithuanian</Option>
                        <Option value="lv" sort="22">Latvian</Option>
                        <Option value="mk" sort="23">Macedonian</Option>
                        <Option value="nl" sort="24">Dutch</Option>
                        <Option value="no" sort="25">Norwegian</Option>
                        <Option value="pl" sort="26">Polish</Option>
                        <Option value="pt" sort="27">Portuguese</Option>
                        <Option value="ro" sort="28">Romanian</Option>
                        <Option value="ru" sort="29">Russian</Option>
                        <Option value="sk" sort="30">Slovak</Option>
                        <Option value="sl" sort="31">Slovenian</Option>
                        <Option value="sq" sort="32">Albanian</Option>
                        <Option value="sr" sort="33">Serbian</Option>
                        <Option value="es" sort="34">Spanish</Option>
                        <Option value="sv" sort="35">Swedish</Option>
                        <Option value="tr" sort="36">Turkish</Option>
                        <Option value="uk" sort="37">Ukrainian</Option>
                        <Option value="zh" sort="38">Chinese</Option>
                    </SelectboxOptions>
                </Setting>


                <Setting type="selectbox" initialValue="light" sort="9" conf="Y">
                    <Name>Theme</Name>
                    <Description>Display mode of the TrustCaptcha component.</Description>
                    <ValueName>trustcaptcha_theme</ValueName>
                    <SelectboxOptions>
                        <Option value="light" sort="1">Light</Option>
                        <Option value="dark" sort="2">Dark</Option>
                        <Option value="media" sort="3">Device setting</Option>
                    </SelectboxOptions>
                </Setting>

                <Setting type="selectbox" initialValue="Y" sort="10" conf="Y">
                    <Name>Autostart</Name>
                    <Description>Setting whether the CAPTCHA should start automatically.</Description>
                    <ValueName>trustcaptcha_autostart</ValueName>
                    <SelectboxOptions>
                        <Option value="Y" sort="1">Yes (recommended)</Option>
                        <Option value="N" sort="2">No</Option>
                    </SelectboxOptions>
                </Setting>

                <Setting type="text" initialValue="" sort="11" conf="Y">
                    <Name>Privacy URL</Name>
                    <Description>Link to your privacy policy. License key required</Description>
                    <ValueName>trustcaptcha_privacy_url</ValueName>
                </Setting>

                <Setting type="checkbox" initialValue="0" sort="12" conf="Y">
                    <Name>Hide branding</Name>
                    <Description>Setting to hide the TrustCaptcha logo. License key required</Description>
                    <ValueName>trustcaptcha_hide_branding</ValueName>
                </Setting>

                <Setting type="checkbox" initialValue="0" sort="13" conf="Y">
                    <Name>Invisible</Name>
                    <Description>Setting to make the CAPTCHA invisible. License key required</Description>
                    <ValueName>trustcaptcha_invisible</ValueName>
                </Setting>

                <Setting type="selectbox" initialValue="inline" sort="14" conf="Y">
                    <Name>Invisible hint</Name>
                    <Description>Shows a small message when the CAPTCHA runs invisibly (inline, right edge, or bottom-right). License key required</Description>
                    <ValueName>trustcaptcha_invisible_hint</ValueName>
                    <SelectboxOptions>
                        <Option value="inline" sort="1">Inline</Option>
                        <Option value="right-border" sort="2">Right border</Option>
                        <Option value="right-bottom" sort="3">Right bottom</Option>
                        <Option value="hidden" sort="4">Hidden</Option>
                    </SelectboxOptions>
                </Setting>

                <Setting type="selectbox" initialValue="standard" sort="15" conf="Y">
                    <Name>Mode</Name>
                    <Description>Set the data mode of the captcha. Must match the settings of the captcha.</Description>
                    <ValueName>trustcaptcha_mode</ValueName>
                    <SelectboxOptions>
                        <Option value="standard" sort="1">Standard</Option>
                        <Option value="minimal" sort="2">Minimal</Option>
                    </SelectboxOptions>
                </Setting>

                <Setting type="textarea" initialValue="" sort="16" conf="Y">
                    <Name>Custom translations (JSON)</Name>
                    <Description>Overwrite existing translations and/or add additional languages.</Description>
                    <ValueName>trustcaptcha_custom_translations</ValueName>
                </Setting>

                <Setting type="textarea" initialValue="" sort="17" conf="Y">
                    <Name>Custom design (JSON)</Name>
                    <Description>Custom design adjustments for the TrustCaptcha component. License key required</Description>
                    <ValueName>trustcaptcha_custom_design</ValueName>
                </Setting>

            </Settingslink>

        </Adminmenu>

    </Install>
</jtlshopplugin>
